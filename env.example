# Configuracoes da Mediaplay API

# Database
# SQLite (desenvolvimento)
DATABASE_URL=sqlite:///./mediaplay.db

# PostgreSQL (producao no Render)
# DATABASE_URL=postgresql://user:password@host:5432/dbname

# Seguranca
SECRET_KEY=your-secret-key-change-in-production-use-openssl-rand-hex-32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS
# Desenvolvimento - permite todos
CORS_ORIGINS=["*"]

# Producao - especificar dominios
# CORS_ORIGINS=["https://yourapp.com","https://app.yourapp.com"]

# SQLAlchemy
ECHO_SQL=false
POOL_PRE_PING=true
POOL_SIZE=5
MAX_OVERFLOW=10



